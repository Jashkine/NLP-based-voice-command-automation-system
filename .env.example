# Environment configuration for voice automation system
# Customize these settings for your deployment

# ASR Configuration
ASR__MODEL_NAME=base
ASR__LANGUAGE=en
ASR__DEVICE=cpu
ASR__PRECISION=float32

# NLU Configuration
NLU__MODEL_NAME=distilbert-base-uncased-finetuned-sst-2-english
NLU__CONFIDENCE_THRESHOLD=0.7
NLU__DEVICE=cpu
NLU__MAX_LENGTH=128

# Voice Configuration
VOICE__SAMPLE_RATE=16000
VOICE__CHANNELS=1
VOICE__CHUNK_DURATION=1.0
VOICE__VAD_THRESHOLD=0.5

# System Configuration
APP_NAME=Voice Command Automation
DEBUG=false
LOG_LEVEL=INFO
